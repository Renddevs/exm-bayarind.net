@{
    Layout = "";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="~/lib/waitMe/waitMe.css" rel="stylesheet">
</head>
<body>
    <div class="container" style="width: 70%;">
        <div class="py-5 text-center">
            <img class="d-block mx-auto mb-4" src="images/amin.jpg" alt="" width="250" height="250">
            <h2>Checkout form</h2>
            <p class="lead">Below is an example form built entirely with Bootstrap’s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p>
        </div>
        <div class="row g-5">
            <div class="col-md-5 col-lg-4 order-md-last">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-primary">Your cart</span>
                    <span class="badge bg-primary rounded-pill">3</span>
                </h4>
                <ul class="list-group mb-3">
                    <li class="list-group-item d-flex justify-content-between lh-sm">
                        <div>
                            <h6 class="my-0">Product name</h6>
                            <small class="text-muted">Brief description</small>
                        </div>
                        <span class="text-muted">$12</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-sm">
                        <div>
                            <h6 class="my-0">Second product</h6>
                            <small class="text-muted">Brief description</small>
                        </div>
                        <span class="text-muted">$8</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-sm">
                        <div>
                            <h6 class="my-0">Third item</h6>
                            <small class="text-muted">Brief description</small>
                        </div>
                        <span class="text-muted">$5</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <div class="text-success">
                            <h6 class="my-0">Promo code</h6>
                            <small>EXAMPLECODE</small>
                        </div>
                        <span class="text-success">−$5</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total (USD)</span>
                        <strong>$20</strong>
                    </li>
                </ul>

                <form class="card p-2">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Promo code">
                        <button type="submit" class="btn btn-secondary">Redeem</button>
                    </div>
                </form>
            </div>
            <div class="col-md-7 col-lg-8">
                <h4 class="mb-3">Billing address</h4>
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label for="firstName" class="form-label">First name</label>
                            <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                            <div class="invalid-feedback">
                                Valid first name is required.
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label for="lastName" class="form-label">Last name</label>
                            <input type="text" class="form-control" id="lastName" placeholder="" value="" required="">
                            <div class="invalid-feedback">
                                Valid last name is required.
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="username" class="form-label">Phone Number</label>
                            <div class="input-group has-validation">
                                <span class="input-group-text">-</span>
                                <input type="text" class="form-control" id="phoneNumber" placeholder="08901672xxx" required="">
                                <div class="invalid-feedback">
                                    Your phone number is required.
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="email" class="form-label">Email <span class="text-muted"></span></label>
                            <input type="email" class="form-control" id="email" placeholder="you@example.com">
                            <div class="invalid-feedback">
                                Please enter a valid email address for shipping updates.
                            </div>
                        </div>
                        <div class="col-12">
                            <label for="address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="address" placeholder="1234 Main St" required="">
                            <div class="invalid-feedback">
                                Please enter your shipping address.
                            </div>
                        </div>
                        
                        <div class="col-3">
                            <label for="" class="form-label">TransactionNo</label>
                            <input type="text" class="form-control" id="transactionNo" placeholder="" />
                        </div>

                        <div class="col-12">
                            <label for="" class="form-label">Transaction Ammount</label>
                            <input type="text" class="form-control" id="transactionAmmount" placeholder="" />
                        </div>

                        <div class="col-md-12">
                            <label for="country" class="form-label">Payment Method</label>
                            <select class="form-control form-control-sm" id="metodePembayaran" required="">
                                <option data-bankId="741400031" value="GHPSUPVA01">Pertama VA</option>
                                <option data-bankId="00336" value="GHPSUMVA01" selected>Mandiri Bill Payment</option>
                                <option data-bankId="13473" value="GHPSUBRIVA01">Bri Virtual Account</option>
                                <option data-bankId="9880138876" value="GHPSUBNIVA01">BNI VA</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select a valid metode pembayaran.
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">
                    <button class="w-100 btn btn-primary btn-lg mb-5" type="button" id="btn_checkout" onclick="createTransaction()">Continue to checkout</button>
                    <div class="col-12" id="virtualAkun-container">
                        <div class="alert alert-success" role="alert">
                            Silahkan transfer ke virtual akun berikut <a href="#" class="alert-link" id="virtualAkun-number">an example link</a>.
                        </div>
                    </div>
            </div>
        </div>
    </div>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/lib/waitMe/waitMe.js"></script>
    <script src="~/lib/notify.js"></script>
    <script src="~/lib/sweetalert.min.js"></script>
    <script src="~/scripts/helper.js"></script>
    <script src="~/scripts/request.js"></script>
    <!-- Request Js -->
    <script src="~/scripts/request.js"></script>
    <script>
        $('#virtualAkun-container').hide();
        function createTransaction() {
            var bankId = "";
            var serviceCode = "";
            if ($('#metodePembayaran').val() == "GHPSUPVA01") {
                bankId = "741400031";
                serviceCode = 1011;
            } else if ($('#metodePembayaran').val() == "GHPSUMVA01") {
                bankId = "00336";
                serviceCode = 1032;
            } else if ($('#metodePembayaran').val() == "GHPSUBRIVA01") {
                bankId = "13473";
                serviceCode = 1062;
            } else {
                bankId = "9880138876";
                serviceCode = 1042;
            }
            var params = {
                "channelId": $('#metodePembayaran').val(),
                "bankId": bankId,
                "serviceCode": serviceCode,
                "currency": "IDR",
                "transactionNo": $('#transactionNo').val(),
                "transactionAmount": $('#transactionAmmount').val(),
                "transactionDate": "2023-12-21T01:23:57.576Z",
                "transactionExpire": "2023-12-21T01:23:57.576Z",
                "description": "just for test",
                "callbackURL": "",
                "customerName": $('#firstName').val() + " " + $('#lastName').val(),
                "customerEmail": $('#email').val(),
                "customerPhone": $('#phoneNumber').val(),
                "customerAddress": $('#address').val()
            };

            console.log(params);

            RequestData("POST", "PaymentGateway/create_transaction", null, null, JSON.stringify(params), function (result) {
                console.log("nih", result);
                if (result.succeeded) {
                    $('#virtualAkun-container').show();
                    $('#virtualAkun-number').text(result.data);
                    ShowNotif("Checkout was successful.", "success");
                } else if (result.code == 406) {
                    AlertMessage("Checkout not acceptable", result.message);
                } else {
                    ShowNotif(`Checkout was failed (${result.message})`, "danger");
                }
            });
        }
    </script>
</body>
</html>